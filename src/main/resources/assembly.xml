<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>${env}</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!--<fileSet>
            <directory>src/main/java</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>-->
        <!-- 过滤项目的所有配置 因为配置文件已经打在jar包里 -->
        <!--<fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>-->
    </fileSets>
    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/LICENSE*</exclude>
                    <exclude>**/*VERSION</exclude>
                    <exclude>**/NOTICE*</exclude>
                    <exclude>**/rootdoc*</exclude>
                    <exclude>**/log4j.properties</exclude>
                    <exclude>**/org.apache.hadoop.fs.FileSystem</exclude>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                    <exclude>processing/*</exclude>
                    <exclude>script/*</exclude>
                    <exclude>reference.conf</exclude>
                    <exclude>*.xsd</exclude>
                    <exclude>*.html</exclude>
                </excludes>
            </unpackOptions>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>src/main/resources/log4j.properties</source>
            <outputDirectory>./</outputDirectory>
            <destName>log4j.properties</destName>
        </file>
        <file>
            <source>src/main/resources/org.apache.hadoop.fs.FileSystem</source>
            <outputDirectory>./META-INF/services</outputDirectory>
            <destName>org.apache.hadoop.fs.FileSystem</destName>
        </file>
        <file>
            <source>src/main/resources/reference.conf</source>
            <outputDirectory>./</outputDirectory>
            <destName>reference.conf</destName>
        </file>
    </files>
</assembly>  